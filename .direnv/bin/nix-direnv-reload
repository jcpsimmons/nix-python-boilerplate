#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/simsies/Documents/github/nix-python-boilerplate" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/simsies/Documents/github/nix-python-boilerplate")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/simsies/Documents/github/nix-python-boilerplate" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/simsies/Documents/github/nix-python-boilerplate/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/simsies/Documents/github/nix-python-boilerplate/.envrc" "/Users/simsies/Documents/github/nix-python-boilerplate/.direnv"/*.rc
